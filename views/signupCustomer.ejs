<%- include('./partials/header') %>
<head>
  <link
    href="https://fonts.googleapis.com/css2?family=Alegreya:wght@500&display=swap"
    rel="stylesheet"
  />
</head>
<title>Sign Up</title>
<script
  src="https://use.fontawesome.com/releases/v5.15.4/js/all.js"
  data-auto-replace-svg="nest"
></script>
<style>
  body {
    max-width: 105%;
    overflow-x: hidden;
    scroll-behavior: smooth;
    background-color: rgb(39, 39, 39);
    color: white;
  }
  #cardOutline {
    /* border: 1px solid black; */
    border-radius: 25px;
    /* background-color: rgb(34, 34, 34); */
  }
  .container {
    filter: drop-shadow(2px 4px 8px #6c6d6d);
    /* background-color: rgb(34, 34, 34); */
  }
</style>
<body>
  <div>
    <h1
      style="
        text-align: center;
        padding-bottom: 70px;
        position: relative;
        font-family: 'Alegreya', serif;
      "
    >
      Vidly
    </h1>
    <div
      class="container mt--8 pb-5"
      style="padding-top: 0px; border-radius: 25px"
    >
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7" style="color: blue">
          <div
            class="card border-0 mb-0"
            style="color: red; border: 1px solid black"
          >
            <div class="card-body px-lg-5 py-lg-5" id="cardOutline">
              <div class="text-center mb-4">
                <small>Sign Up!</small>
              </div>
              <%if(message.length>0){%>

              <div
                class="alert alert-danger alert-dismissible fade show"
                role="alert"
              >
                <strong><%=message%></strong>
                <button
                  type="button"
                  class="close"
                  data-dismiss="alert"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <%}%>
              <form role="form" action="/api/auth/customersignup" method="POST">
                <div class="form-group mb-3">
                  <div
                    class="
                      input-group input-group-merge input-group-alternative
                    "
                  >
                    <div class="input-group-prepend">
                      <span class="input-group-text"
                        ><i class="fas fa-phone"></i
                      ></span>
                    </div>
                    <input
                      class="form-control"
                      name="phone"
                      placeholder="Phone"
                    />
                  </div>
                </div>
                <div class="form-group">
                  <div
                    class="
                      input-group input-group-merge input-group-alternative
                    "
                  >
                    <div class="input-group-prepend">
                      <span class="input-group-text"
                        ><i class="fas fa-user"></i
                      ></span>
                    </div>
                    <input
                      class="form-control"
                      placeholder="Name"
                      name="name"
                      type="text"
                    />
                  </div>
                </div>
                <div class="form-group">
                  <div
                    class="
                      input-group input-group-merge input-group-alternative
                    "
                  >
                    <div class="input-group-prepend">
                      <span class="input-group-text"
                        ><i class="fas fa-lock"></i
                      ></span>
                    </div>
                    <input
                      class="form-control"
                      placeholder="Password"
                      name="password"
                      type="password"
                    />
                  </div>
                </div>

                <div class="text-center">
                  <input
                    type="submit"
                    class="btn btn-primary my-4"
                    value="Sign Up"
                    style="padding-left: 30px; padding-right: 30px"
                  />
                </div>

                <div class="text-center">
                  <h7 style="margin: auto" class="text-center"
                    >Already have an Account? </h7
                  ><br /><br /><a
                    class="btn btn-info"
                    href="/api/auth/loginCustomer"
                    >Login</a
                  >
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include('./partials/footer') %>

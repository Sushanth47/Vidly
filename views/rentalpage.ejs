<!DOCTYPE html>
<%- include('./partials/header') %>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Yaldevi:wght@300&display=swap"
      rel="stylesheet"
    />
  </head>
  <title>Confirmation</title>

  <body>
    <h1 class="text-center">Checkout Page</h1>
    <form action="/api/rentals/checkout" class="form" method="POST">
      <label>Select Days for Rental&nbsp;&nbsp;&nbsp;</label>
      <input class="form-input" type="number" name="days" />
      <!-- <br /><label>Address&nbsp;&nbsp;&nbsp;</label> -->
      <input class="form-input" type="hidden" name="address" />
      <button type="submit" class="btn btn-success">Rent</button>
    </form>

    <div class="moviesBox">
      <%customer.cart.forEach(list=>{%>
      <div class="card" id="cardStyling">
        <div>
          <a
            class="iconStyling"
            href="/api/customers/pullfromcart/<%=list._id%>"
            ><i class="fas fa-trash fa-2x"></i
          ></a>
        </div>
        <a
          rel="noopener noreferrer"
          target="_blank"
          href="/api/movies/<%=list._id%>"
          ><div class="img-hover">
            <img class="img" src="<%=list.img%>" /></div
        ></a>

        <br />
        <div class="card-body">
          <a
            href="/api/movies/<%=list._id%>"
            rel="noopener noreferrer"
            target="_blank"
            ><h6 style="color: white" class="text-center">
              <%=list.title%> (<%=list.year%>)
            </h6></a
          >
        </div>
      </div>

      <%})%>
    </div>
  </body>
</html>
<%- include('./partials/footer') %>

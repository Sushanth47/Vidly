<%- include('./partials/header') %>
<div style="background-image: url(https://c4.wallpaperflare.com/wallpaper/500/442/354/outrun-vaporwave-hd-wallpaper-preview.jpg);background-repeat: no-repeat;   background-size: cover;">
<div class="container mt--8 pb-5" style="padding-top:50px;">
  <h1 style="text-align:center; padding-bottom:70px;position:relative;color:white">Vidly</h1>
   <div class="row justify-content-center">
     <div class="col-lg-5 col-md-7">
       <div class="card border-0 mb-0">
         
         <div class="card-body px-lg-5 py-lg-5">
           <div class="text-center text-muted mb-4">
             <span>Sign in</span>
           </div>
           <%if(type=="userLogin"){%>
              <form role="form" action="/api/auth/loginData" method="POST">
                <div class="form-group mb-3">
                  <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                    </div>
                    <input class="form-control" name="email" placeholder="username or email or phone">
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group input-group-merge input-group-alternative">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    <input class="form-control" placeholder="Password" name="password" type="password">
                  </div>
                </div>
                
                <div class="text-center">
                  <input type="submit" class="btn btn-primary my-4" value="Log in">
                </div>
              </form>
              <span style="text-align:center; padding-left:100px; padding-bottom:10px">Dont have an Account?</span>
              <br><br>
              <a style="text-align:center; padding-left:100px; padding-bottom:100px" href="/api/auth/signupData"><button type="submit" class="btn btn-success">Create an account</button></a>
              <%}else if(type=="customerLogin"){%>
                <form role="form" action="/api/auth/customerlogin" method="POST">
                  <div class="form-group mb-3">
                    <div class="input-group input-group-merge input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                      </div>
                      <input class="form-control" name="phone" placeholder="phone">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-merge input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                      </div>
                      <input class="form-control" placeholder="Password" name="password" type="password">
                    </div>
                  </div>
                  
                  <div class="text-center">
                    <input type="submit" class="btn btn-primary my-4" value="Log in">
                  </div>
                </form>
                
                <span style="text-align:center; padding-left:100px; padding-bottom:10px">Dont have an Account?</span>
                <br><br>
                <a style="text-align:center; padding-left:100px; padding-bottom:100px" href="/api/auth/customersignup"><button type="submit" class="btn btn-success">Create an account</button></a>

                <!-- <a class="align-items-center" href="/api/auth/customersignup"><button type="submit" class="btn btn-success">Create an account</button></a> -->
              <%}%>
         </div>
       </div>
       <div class="row mt-3">
       </div>
     </div>
   </div>
 </div>
</div>
<%- include('./partials/footer') %>



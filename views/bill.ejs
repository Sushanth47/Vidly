<%- include('./partials/header') %>
<style>
  body {
    background-color: rgb(252, 210, 180);
    background-image: url("https://images.unsplash.com/photo-1519681393784-d120267933ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1124&q=100");
    background-position: center;
  }
  .billbox {
    margin: auto;
    width: 720px;
    height: 470px;
    /* border: 1px solid black; */
    backdrop-filter: blur(30px) saturate(200%);
    -webkit-backdrop-filter: blur(10px) saturate(200%);
    background-color: rgba(255, 255, 255, 0);
    border-radius: 12px;
    border: 1px solid rgba(209, 213, 219, 0.3);
    font-family: "Yaldevi", sans-serif;
    color: white;
  }
  h5 {
    padding-left: 100px;
    margin-bottom: 30px;
  }
  .continue {
    text-align: center;
  }
  .buttonbar {
    margin: auto;
    width: 640px;
    height: 50px;
    flex-direction: row;
    /* border: 1px solid black; */
    backdrop-filter: blur(30px) saturate(200%);
    -webkit-backdrop-filter: blur(0px) saturate(200%);
    background-color: rgba(17, 25, 40, 0);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.125);
    margin-bottom: 30px;
  }
</style>
<%console.log(rental, 'rentalllllllllllll')%>
<body>
  <div class="buttonbar">
    <p>Vidly™ Bill</p>
    <button>Take Screen Shot</button>
    <button>Download PDF</button>
  </div>
  <div class="billbox">
    <h1 class="text-center" style="margin-top: 10px; margin-bottom: 40px">
      Thank You for Shopping with Vidly™
    </h1>
    <h5>Movies: <%=rental.movie%></h5>
    <h5>Total Price: <%=rental.rentalFee%></h5>
    <h5>Date of Buying: <%=rental.dateOut%></h5>
    <h5>Date of Returning: <%=rental.dateReturned%></h5>
    <h5>Unique Code: <%=rental.checkOut%></h5>
    <div class="continue">
      <a class="btn btn-primary">Continue Shopping</a>
    </div>
  </div>
</body>
<%- include('./partials/footer') %>

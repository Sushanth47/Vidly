<%- include('./partials/header') %>
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap"
  rel="stylesheet"
/>
<style>
  body {
    max-width: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
    background-color: rgb(39, 39, 39);
    color: white;
  }
  h1 {
    text-align: center;
  }
  .mainbox {
    padding-left: 50px;

    flex-direction: row;
  }

  #submitButton {
    background-color: #0fbd9c;
    border-radius: 25px;
    border: 1px solid;
    display: block;
    color: white;
    margin-top: 3px;
    margin-left: 3px;
    box-shadow: 0.5px 0.5px 5px #343d47;
  }
  .searchResults {
    width: 26rem;
    height: 22rem;
    overflow: hidden;
    margin-bottom: 40px;
    border: 1px solid transparent;
    box-shadow: 5px 5px 5px rgb(10, 10, 10);
    border-radius: 10px;
    margin-right: 50px;
    -webkit-transform: scale(1);
    transform: scale(1);
    -webkit-transition: 0.3s ease-in-out;
    transition: 0.3s ease-in-out;
  }
  .seachResults:hover {
    -webkit-transform: scale(1);
    transform: scale(1.1);
  }
  #searchResultsGenre {
    width: 35rem;
    height: 12rem;
    overflow: hidden;
    /* border-radius: 10px; */
    margin-right: 0px;
  }
  .mainbox1 {
    padding-left: 66vh;
    margin-bottom: 40px;
  }
</style>
<body>
  
  <title>Search Results for "<%=title%>"</title>

  <h1 class="text-center">Search Results for "<%=title%>"</h1>
  <br />

  <div style="padding-left: 1200px">
    <form action="/api/movies/search/" method="GET">
      <div class="container row">
        <input
          type="search"
          class="form-control"
          style="
            width: 210px;
            border: 2px solid grey;
            margin-top: 3px;
            border-radius: 25px;
          "
          name="title"
          placeholder="Search Here"
        />
        <button type="submit" id="submitButton">Search</button>
      </div>
    </form>
  </div>

  <div class="mainbox1">
    <%genre.forEach(list=>{%>
    <div class="media" id="searchResultsGenre">
      <img
        class="float-left"
        src="<%=list.img%>"
        height="180"
        width="200"
        alt="Generic placeholder image"
      />
      <div class="media-body" style="margin: 20">
        <h5 class="mt-0" style="font-weight: bold"><%=list.name%></h5>
        <h6 class="mt-0"><%=list.description%></h6>
      </div>
    </div>
    <%})%>
  </div>
  <%if(!movie && !genresearch){%>
  <h1 class="text-center" style="margin-bottom: 20px">No Movies Found</h1>
  <%}else{%>
  <h1 class="text-center" style="margin-bottom: 20px">Movies</h1>
  <%}%>
  <div class="mainbox">
    <div class="row">
      <%movie.forEach(list=>{%>
      <div class="media searchResults">
        <img
          class="rounded float-left"
          src="<%=list.img%>"
          height="350"
          width="220"
          alt="Generic placeholder image"
        />
        <div class="media-body" style="margin: 20">
          <h5 class="mt-0" style="font-weight: bold">
            <%=list.title%> (<%=list.year%>)
          </h5>
          <br />
          <h6 class="mt-0"><strong>Cast</strong>: <%=list.cast%></h6>
          <h6 class="mt-0"><strong>Genre</strong>: <%=list.genre%></h6>
          <h6 class="mt-0"><strong>Rank</strong>: <%=list.rank%></h6>
          <h6 class="mt-0">
            <strong>Rent</strong>: $<%=list.dailyRentalRate%>
          </h6>
          <br />

          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
            class="mt-0"
            href="<%=list.links%>"
            id="imdb"
            >IMDb:<%=list.imdbRating%>
          </a>
        </div>
      </div>
      <%})%>
    </div>
    <div class="mainbox">
      <div class="row">
        <%genresearch.forEach(list=>{%>
        
          <div class="media searchResults">
            <a href="/api/movies/<%=list._id%>"><img
              class="rounded float-left"
              src="<%=list.img%>"
              height="350"
              width="220"
              alt="Generic placeholder image"
            /></a>
            <div class="media-body" style="margin: 20">
              <a style="text-decoration:none; color:white" href="/api/movies/<%=list._id%>"><h5 class="mt-0" >
                <%=list.title%> (<%=list.year%>)
              </h5></a>
              <br />
              <h6 class="mt-0" style="white-space:wrap"><strong>Cast</strong>: <%=list.cast%></h6>
              <h6 class="mt-0"><strong>Director</strong>: <%=list.director%></h6>
              <h6 class="mt-0">
                <strong>Genre</strong>: <%for(var i=0; i < list.genreId.length; i++ ){%><a href="/api/movies/search/?title=<%=list.genreId[i].name%>"><%=list.genreId[i].name%> </a><%}%>
                <a
                  style="text-decoration: none"
                  href="/api/movies/search/?title=<%=list.genre%>"
                  ></a
                >
              </h6>
              <h6 class="mt-0"><strong>IMDb</strong>: <%=list.imdbRating%></h6>
              <h6 class="mt-0"><strong>Rent</strong>: $<%=list.dailyRentalRate%></h6>
            </div>
          </div>
  
          <%})%>
    </div>
    
  </div>
  <br /><br />
</body>
<script
  src="https://use.fontawesome.com/releases/v5.15.4/js/all.js"
  data-auto-replace-svg="nest"
></script>

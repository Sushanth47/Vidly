<%- include('./partials/header') %>
<style>
  h1 {
    text-align: center;
  }
  .mainbox {
    padding: 30px;
    margin-right: -60px;
  }
  #submitButton {
    background-color: #0fbd9c;
    border-radius: 25px;
    border: 1px solid;
    display: block;
    color: white;
    margin-top: 3px;
    margin-left: 3px;
    box-shadow: 0.5px 0.5px 5px #343d47;
  }
  #searchResults {
    width: 25rem;
    height: 25rem;
    overflow: hidden;
    border: 1px solid rgb(240, 240, 240);
    box-shadow: 5px 5px 5px lightgrey;
    border-radius: 10px;
    margin-right: 30px;
  }
  #searchResultsGenre {
    width: 25rem;
    height: 25rem;
    overflow: hidden;
    border: 1px solid rgb(240, 240, 240);
    box-shadow: 5px 5px 5px lightgrey;
    border-radius: 10px;
    margin-right: 30px;
  }
</style>
<title>Search Results for "<%=title%>"</title>

<h1 class="text-center">Search Results for "<%=title%>"</h1>
<br />

<div style="padding-left: 1400px">
  <form action="/api/movies/search/" method="GET">
    <div class="container row">
      <input
        type="search"
        class="form-control"
        style="
          width: 210px;
          border: 2px solid grey;
          margin-top: 3px;
          border-radius: 25px;
        "
        name="title"
        placeholder="Search Here"
      />
      <button type="submit" id="submitButton">Search</button>
    </div>
  </form>
</div>

<%if(movie.length == 0){%>
<h1>No Movies Found</h1>
<%}%>
<div class="mainbox">
  <div class="row">
    <%movie.forEach(list=>{%>
    <div class="media" id="searchResults">
      <img
        class="rounded float-left"
        src="<%=list.img%>"
        height="290"
        width="150"
        alt="Generic placeholder image"
      />
      <div class="media-body" style="margin: 20">
        <h5 class="mt-0" style="font-weight: bold">
          <%=list.title%> (<%=list.year%>)
        </h5>
        <br />
        <h6 class="mt-0"><%=list.cast%></h6>
        <h6 class="mt-0"><%=list.genreId.name%></h6>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
          class="mt-0"
          href="<%=list.links%>"
          style="color: black"
          ><i class="fab fa-imdb fa-5x"></i
        ></a>
      </div>
    </div>
    <%})%> <%genre.forEach(list=>{%>
    <div class="media" id="searchResultsGenre">
      <img
        class="rounded float-left"
        src="<%=list.img%>"
        height="auto"
        width="150"
        alt="Generic placeholder image"
      />
      <div class="media-body" style="margin: 20">
        <h5 class="mt-0" style="font-weight: bold"><%=list.name%></h5>
        <h6 class="mt-0"><%=list.description%></h6>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
          class="mt-0"
          href="<%=list.links%>"
          style="color: black"
          ><i class="fab fa-imdb fa-5x"></i
        ></a>
      </div>
    </div>
    <%})%>
  </div>
</div>

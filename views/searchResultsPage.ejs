
<%- include('./partials/header') %>

<h1>Search Results for "<%=title%>"</h1>
  
<div class="media" style="border:1px solid; border-width: 3px; width:300px">
    <%movie.forEach(list=>{%>
    <a href="/api/movies/<%=list._id%>"><img src="<%=list.img%>" style="margin-left:5px" height="150px" width="90px" class="mr-3" alt="#">
    <div class="media-body">
      <h5 class="mt-0"><%=list.title%></h5>
      <p><%=list.cast%></p></a>
    </div>
    <%})%>
  </div>
  

<%- include('./partials/header') %>
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap"
  rel="stylesheet"
/>
<style>
  :root{
    --clr-background:rgb(52, 58, 64);
    --clr-text:white
  }
  body {
    max-width: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
    background-color: var(--clr-background);
    color: white;
  }
  a{
    text-decoration: none;
    color:black
  }
  a:hover{
    text-decoration: none;
    color:black
  }
  h1 {
    text-align: center;
  }
  .mainbox {
    padding-left: 3rem;
    flex-direction: row;
    /* background-color: white; */
  }

  #submitButton {
    background-color: #0fbd9c;
    border-radius: 25px;
    border: 1px solid;
    display: block;
    color: white;
    margin-top: 3px;
    margin-left: 3px;
  }
  .searchResults {
    width: 26rem;
    height: 22rem;

    margin-bottom: 2.12rem;
    border: 1px solid transparent;
    border-radius: 10px;
    margin-right: 3rem;
    background-color: white;
    color:black
  }
  .input{
    width: 35%;
    border: 2px solid grey;
    margin-top: 3px;
    border-radius: 25px;
  }
  #searchResultsGenre {
    width: 35rem;
    height: 12rem;
    display:flex;
    justify-content: space-between;
    margin-right: 0px;
  }
  .searchBar{
    position:relative;
    left:36%;
    margin-bottom:2rem;
  }
  .mainbox1 {
    position:relative;
    left:36%;
    margin-bottom:3.2rem;
  }
  .textBody{
    margin-left: 1.2rem
  }
  .textBody textarea{
    line-height: 1.2;
    background-color:var(--clr-background);
    color:white;
    border:none;
    
  }
  
</style>
<body>
  
  <title>Search Results for "<%=title%>"</title>

  <h1 class="text-center" style="margin-bottom:2rem;">Search Results for "<%=title%>"</h1>

  <div class="searchBar">
    <form action="/api/movies/search/" method="GET">
      <div class="container row">
        <input
          type="search"
          class="form-control input"
          name="title"
          placeholder="Search Here"
        />
        <button type="submit" id="submitButton">Search</button>
      </div>
    </form>
  </div>

  <div class="mainbox1">
    <%genre.forEach(list=>{%>
    <div id="searchResultsGenre">
      <img
        
        src="<%=list.img%>"
        height="180"
        width="auto"
        alt="Generic placeholder image"
      />
      <div class="textBody">
        <h5 style="font-weight: bold"><%=list.name%></h5>
        <textarea rows="6"><%=list.description%></textarea>
      </div>
    </div>
    <%})%>
  </div>
  <%if(!movie && !genresearch){%>
  <h1 class="text-center" style="margin-bottom: 20px">No Movies Found</h1>
  <%}else{%>
  <h1 class="text-center" style="margin-bottom: 20px">Movies</h1>
  <%}%>


  <div class="mainbox">
    <div class="row">
      <%movie.forEach(list=>{%>
      <div class="media searchResults">
        <img
          class="rounded float-left"
          src="<%=list.img%>"
          height="350"
          width="220"
          alt="Generic placeholder image"
        />
        <div class="media-body" style="margin: 20">
          <a href="/api/movies/<%=list._id%>" ><h5 class="mt-0" style="font-weight: bold">
            <%=list.title%> (<%=list.year%>)
          </h5></a>
          <br />
          <h6 class="mt-0"> <%=list.cast%></h6>
          <h6 class="mt-0"><strong>Genre</strong> <%=list.genre%></h6>
          <h6 class="mt-0"><strong>Rank</strong> <%=list.rank%></h6>
          <h6 class="mt-0">
            <strong>Rent</strong>: $<%=list.dailyRentalRate%>
          </h6>
          <br />

          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a
            class="mt-0"
            href="<%=list.links%>"
            id="imdb"
            >IMDb:<%=list.imdbRating%>
          </a>
        </div>
      </div>
      <%})%>
    </div>
    <div class="mainbox">
      <div class="row">
        <%genresearch.forEach(list=>{%>
        
          <div class="media searchResults">
            <a href="/api/movies/<%=list._id%>"><img
              class="rounded float-left"
              src="<%=list.img%>"
              height="350"
              width="220"
              alt="Generic placeholder image"
            /></a>
            <div class="media-body" style="margin: 20">
              <a  href="/api/movies/<%=list._id%>"><h5 class="mt-0" >
                <%=list.title%> (<%=list.year%>)
              </h5></a>
              <br />
              <h6 class="mt-0" style="white-space:wrap"> <%=list.cast%></h6>
              <h6 class="mt-0"><strong>Director</strong> <%=list.director%></h6>
              <h6 class="mt-0">
                <strong> <%for(var i=0; i < list.genreId.length; i++ ){%><a style="color:blue" href="/api/movies/search/?title=<%=list.genreId[i].name%>"><%=list.genreId[i].name%> </a><%}%></strong>
                <a
                  
                  href="/api/movies/search/?title=<%=list.genre%>"
                  ></a
                >
              </h6>
              <h6 class="mt-0"><strong>IMDb</strong>: <%=list.imdbRating%></h6>
              <h6 class="mt-0"><strong>Rent</strong>: $<%=list.dailyRentalRate%></h6>
            </div>
          </div>
  
          <%})%>
    </div>
    
  </div>
  <br /><br />
</body>

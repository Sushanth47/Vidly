<%- include('./partials/header') %>
<style>
  h1 {
    font-family: "Yaldevi", sans-serif;
  }
  body {
    max-width: 105%;
    overflow-x: hidden;
    scroll-behavior: smooth;
    background-color: rgb(52, 58, 64);
    color: white;
  }

  .movieclass {
    margin-left: 10vh;
    align-items: center;
    margin-top: 5px;
    margin-bottom: 5px;
  }
  .iconStyling {
    float: right;
    margin-top: 1.25rem;
    color: white;
  }
  p,
  h6 {
    font-family: "Yaldevi", sans-serif;
  }
  .iconStyling:hover {
    color: red;
  }
  .nextcontainer {
    display: flex;
    flex-wrap: wrap;
    flex-shrink: inherit;
    flex-basis: 2rem;
    justify-content: space-around;
    grid-template-columns: min-content;
    margin-bottom: 2rem;
  }
  #cardStyling {
    border: 1px solid transparent;
    background-color: rgb(52, 58, 64);
    height: 25.625rem;
    width: 14.6875rem;
    /* margin-right: 9vh; */
    margin-bottom: 5vh;
  }

  img {
    position: relative;
    /* top: 0; */
    height: 20rem;
    margin: 0.625rem;
    border-radius: 10px;
    width: 14.5rem;
  }
</style>
<body>
  <%if(subject == "wishList"){%>
  <br />
  <title>My Wishlist</title>

  <h1 class="text-center" style="margin-bottom: 2.5rem">My Wishlist</h1>

  <br />
  <div class="nextcontainer">
    <%cust.wishList.forEach(list=>{%>

    <div class="card" id="cardStyling">
      <div>
        <a class="iconStyling" href="/api/customers/pullfromlist/<%=list._id%>"
          ><i class="fas fa-trash fa-2x"></i
        ></a>
        <a target="_blank" href="/api/movies/<%=list._id%>"
          ><img class="align-items-center" src="<%=list.img%>" alt="..."
        /></a>
      </div>
      <div class="card-block">
        <ul class="list-group" style="border-color: white">
          <a
            href="/api/movies/<%=list._id%>"
            style="text-decoration: none"
            target="_blank"
            ><h6 class="card-title text-center">
              <%=list.title%>(<%=list.year%>)
            </h6></a
          >
        </ul>
      </div>
    </div>
    <br />
    <%})%>
  </div>

  <%}else if(subject == "cart"){%>
  <title>My Cart</title>
  <h1 class="text-center">My Cart</h1>
  <a
    style="float: right; position: relative; right: 5%"
    href="/api/rentals/rentalpage"
    ><button class="btn btn-success">Checkout</button></a
  >
  <br />
  <div class="nextcontainer">
    <%cust.cart.forEach(list=>{%>
    <div class="card" id="cardStyling">
      <div>
        <a
          class="text-right iconStyling"
          href="/api/customers/pullfromlist/<%=list._id%>"
          ><i class="fas fa-trash fa-2x"></i
        ></a>
        <a target="_blank" href="/api/movies/<%=list._id%>"
          ><img class="align-items-center" src="<%=list.img%>" alt="..."
        /></a>
      </div>
      <div class="card-block">
        <ul class="list-group" style="border-radius: 30px; border-color: white">
          <a
            href="/api/movies/<%=list._id%>"
            style="text-decoration: none"
            target="_blank"
            ><h6 class="card-title text-center">
              <%=list.title%>(<%=list.year%>)
            </h6></a
          >
        </ul>
      </div>
    </div>
    <br />
    <%})%>
  </div>

  <br />

  <%} else if(subject == 'rental'){%>
  <title>My Rentals</title>
  <h1 class="text-center">My Rentals</h1>
  <br />

  <div class="nextcontainer">
    <%if(cust){%> <%cust.forEach(now=>{%> <%now.movie.forEach(list=>{%>
    <div class="card" id="cardStyling">
      <a target="_blank" href="/api/movies/<%=list._id%>"
        ><img class="card-img align-items-center" src="<%=list.img%>" alt="..."
      /></a>
      <div class="card-block" style="padding: 4px">
        <ul class="list-group" style="border-radius: 30px; border-color: white">
          <a
            href="/api/movies/<%=list._id%>"
            style="text-decoration: none"
            target="_blank"
            ><h5 class="card-title" style="text-align: center; color: white">
              <%=list.title%> (<%=list.year%>)
            </h5></a
          >
        </ul>
      </div>
    </div>
    <%})%> <%})%> <%} else {%>
    <h1 style="text-align: center">Go Buy Something!</h1>
    <%}%>
  </div>

  <%}%>
  <br />
</body>
<%- include('./partials/footer') %>

<%- include('./partials/header') %>
<title>Request Movies</title>
<style>
  body {
    width: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
    background-color: rgb(52, 58, 64);
    color: white;
  }
  #submitButton {
    background-color: #0fbd9c;
    border-radius: 20px;
    border: 1px solid white;
    padding: 0.48rem;
    display: block;
    color: white;
    margin-left: 5px;
  }
  .input {
    width: 50%;
    margin-top: 3px;
    border-radius: 1.6rem;
    padding: 1.1rem;
  }
  .search {
    margin: auto;
    position: relative;
    left: 30vw;
    align-items: center;
    margin-bottom: 4rem;
  }
</style>
<body>
  <div style="text-align: center">
    <h1 style="text-size-adjust: 1.9rem">Request Movies</h1>
    <h6>Please add the title to request a specific movie</h6>
    <h7>**Make sure to add the right title for the movie**</h7><br />
    <br />
  </div>
  <div class="search">
    <form
      style="text-align: center"
      action="/api/movies/requestmovie"
      method="POST"
    >
      <div class="container row">
        <input
          type="text"
          class="form-control input"
          name="title"
          placeholder="Add movie name here..."
          style="border-radius: 5px"
        /><br />
        <button type="submit" id="submitButton" style="border-radius: 10px">
          Submit
        </button>
      </div>
    </form>
  </div>
</body>
<footer><%- include('./partials/footer') %></footer>
